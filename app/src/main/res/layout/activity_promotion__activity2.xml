<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/pic12"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="172dp"
            android:background="@drawable/pic1" />

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="376dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-382dp"
            android:layout_marginLeft="-382dp"
            android:layout_marginTop="223dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/img1"
            android:layout_toRightOf="@id/img1"
            android:background="@color/cardview_light_background"
            android:text="@string/desc_1"
            android:textAlignment="center"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="57dp"
            android:layout_height="89dp"
            android:layout_alignEnd="@+id/img1"
            android:layout_alignBottom="@+id/txtView1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="347dp"
            android:layout_marginTop="206dp"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-10dp"
            android:text=">"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/pic12"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="395dp"
            android:layout_height="159dp"
            android:background="@drawable/img7" />

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="378dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-388dp"
            android:layout_marginLeft="-388dp"
            android:layout_marginTop="217dp"
            android:layout_toEndOf="@id/img2"
            android:layout_toRightOf="@id/img2"
            android:text="@string/desc_1"
            android:textAlignment="center"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>