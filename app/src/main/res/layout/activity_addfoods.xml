<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic34"
    tools:context=".Addfoods">


    <Button
        android:id="@+id/BtnAddFoods"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="45dp"
        android:background="#717CAB"
        android:text="add to food list"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFoodDescription"
        app:layout_constraintVertical_bias="0.885" />

    <EditText
        android:id="@+id/editFoodName"
        android:layout_width="373dp"
        android:layout_height="45dp"
        android:layout_below="@id/editFoodNo"
        android:layout_alignStart="@id/editFoodNo"
        android:layout_alignLeft="@id/editFoodNo"
        android:layout_marginTop="24dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Food Name"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFoodNo" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="371dp"
        android:layout_height="43dp"
        android:layout_below="@id/editFoodName"
        android:layout_alignStart="@id/editFoodName"
        android:layout_alignLeft="@id/editFoodName"
        android:layout_marginTop="32dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Price"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFoodName" />


    <EditText
        android:id="@+id/editFoodDescription"
        android:layout_width="373dp"
        android:layout_height="43dp"
        android:layout_below="@id/editPrice"
        android:layout_alignStart="@id/editPrice"
        android:layout_alignLeft="@id/editPrice"
        android:layout_marginTop="28dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Food Description"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPrice" />

    <EditText
        android:id="@+id/editFoodNo"
        android:layout_width="373dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Food Item Number"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Add New Food Items"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>